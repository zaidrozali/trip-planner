// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String             @id @default(cuid())
  email          String             @unique
  name           String?
  avatarUrl      String?
  trips          Trip[]             @relation("TripOwner")
  collaborations TripCollaborator[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
}

model Trip {
  id            String             @id @default(cuid())
  title         String
  description   String?
  location      String?
  startDate     DateTime
  endDate       DateTime
  budget        Float              @default(0)
  coverEmoji    String             @default("ðŸ—»")
  ownerId       String
  owner         User               @relation("TripOwner", fields: [ownerId], references: [id])
  collaborators TripCollaborator[]
  days          Day[]
  checklists    Checklist[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model TripCollaborator {
  id     String @id @default(cuid())
  tripId String
  userId String
  role   String @default("viewer") // "editor" | "viewer"
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tripId, userId])
}

model Day {
  id         String     @id @default(cuid())
  tripId     String
  dayNumber  Int
  date       DateTime
  trip       Trip       @relation(fields: [tripId], references: [id], onDelete: Cascade)
  activities Activity[]

  @@unique([tripId, dayNumber])
}

model Activity {
  id          String   @id @default(cuid())
  dayId       String
  title       String
  description String?
  location    String?
  time        String
  cost        Float    @default(0)
  icon        String   @default("MapPin")
  color       String   @default("orange")
  order       Int      @default(0)
  day         Day      @relation(fields: [dayId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Checklist {
  id     String          @id @default(cuid())
  tripId String
  title  String
  shared Boolean         @default(true)
  trip   Trip            @relation(fields: [tripId], references: [id], onDelete: Cascade)
  items  ChecklistItem[]
}

model ChecklistItem {
  id          String    @id @default(cuid())
  checklistId String
  text        String
  completed   Boolean   @default(false)
  order       Int       @default(0)
  checklist   Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
}
